thor"><name><surname>Herrera</surname><given-names>Silvia</given-names></name><xref ref-type="aff" rid="aff004"><sup>4</sup></xref></contrib><contrib contrib-type="author"><name><surname>Mar&#x000ed;n</surname><given-names>Ana</given-names></name><xref ref-type="aff" rid="aff004"><sup>4</sup></xref></contrib><contrib contrib-type="author"><name><surname>Do&#x000f1;ate</surname><given-names>Maite</given-names></name><xref ref-type="aff" rid="aff005"><sup>5</sup></xref></contrib><contrib contrib-type="author"><name><surname>Alvarado-Tapias</surname><given-names>Edilmar</given-names></name><xref ref-type="aff" rid="aff001"><sup>1</sup></xref></contrib><contrib contrib-type="author"><name><surname>Malouf</surname><given-names>Jorge</given-names></name><xref ref-type="aff" rid="aff004"><sup>4</sup></xref></contrib><contrib contrib-type="author"><name><surname>N&#x000e1;cher</surname><given-names>Laura</given-names></name><xref ref-type="aff" rid="aff001"><sup>1</sup></xref></contrib><contrib contrib-type="author"><name><surname>Serra-Grima</surname><given-names>Ricard</given-names></name><xref ref-type="aff" rid="aff005"><sup>5</sup></xref></contrib><contrib contrib-type="author"><name><surname>Guarner</surname><given-names>Carlos</given-names></name><xref ref-type="aff" rid="aff001"><sup>1</sup></xref><xref ref-type="aff" rid="aff006"><sup>6</sup></xref><xref ref-type="aff" rid="aff007"><sup>7</sup></xref></contrib><contrib contrib-type="author" deceased="yes"><name><surname>Cordoba</surname><given-names>Juan</given-names></name><xref ref-type="aff" rid="aff006"><sup>6</sup></xref><xref ref-type="aff" rid="aff007"><sup>7</sup></xref><xref ref-type="aff" rid="aff008"><sup>8</sup></xref></contrib><contrib contrib-type="author"><name><surname>Soriano</surname><given-names>German</given-names></name><xref ref-type="aff" rid="aff001"><sup>1</sup></xref><xref ref-type="aff" rid="aff006"><sup>6</sup></xref><xref ref-type="aff" rid="aff007"><sup>7</sup></xref><xref ref-type="co