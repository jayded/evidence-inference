ib contrib-type="author" id="A6"><name><surname>Poli-de-Figueiredo</surname><given-names>Carlos E</given-names></name><xref ref-type="aff" rid="I3">3</xref><email>cepolif@pucrs.br</email></contrib><contrib contrib-type="author" id="A7"><name><surname>Mion</surname><given-names>D&#x000e9;cio</given-names></name><xref ref-type="aff" rid="I4">4</xref><email>deciomion@uol.com.br</email></contrib><contrib contrib-type="author" id="A8"><name><surname>Bortoloto</surname><given-names>Luiz</given-names></name><xref ref-type="aff" rid="I5">5</xref><email>hipluiz@incor.usp.br</email></contrib><contrib contrib-type="author" id="A9"><name><surname>Consolim-Colombo</surname><given-names>Fernanda</given-names></name><xref ref-type="aff" rid="I5">5</xref><email>hipfernanda@incor.usp.br</email></contrib><contrib contrib-type="author" id="A10"><name><surname>Nobre</surname><given-names>Fernando</given-names></name><xref ref-type="aff" rid="I6">6</xref><email>fernando.nobre@uol.com.br</email></contrib><contrib contrib-type="author" id="A11"><name><surname>Coelho</surname><given-names>Eduardo Barbosa</given-names></name><xref ref-type="aff" rid="I6">6</xref><email>ebcoelho@fmrp.usp.br</email></contrib><contrib contrib-type="author" id="A12"><name><surname>Vilela-Martin</surname><given-names>Jos&#x000e9; F</given-names></name><xref ref-type="aff" rid="I7">7</xref><email>vilelamartin@uol.com.br</email></contrib><contrib contrib-type="author" id="A13"><name><surname>Moreno</surname><given-names>Heitor</given-names><suffix>Jr</suffix></name><xref ref-type="aff" rid="I8">8</xref><email>hmoreno@uol.com.br</email></contrib><contrib contrib-type="author" id="A14"><name><surname>Cesarino</surname><given-names>Evandro Jos&#x000e9;</given-names></name><xref ref-type="aff" rid="I9">9</xref><email>cesarino@fcfrp.usp.br</email></contrib><contrib contrib-type="author" id="A15"><name><surname>Franco</surname><given-names>Roberto</given-names></name><xref ref-type="aff" rid="I10">10</xref><email>rjfran